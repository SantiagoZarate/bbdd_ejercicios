---
import UngsLocoIcon from '../../icons/UngsLocoIcon.astro'
import './header.css'
import ThemeSwitcher from './ThemeSwitcher.astro'
---

<header class='header fixed left-0 top-0 z-50 w-full border-b px-6'>
  <div
    class='mx-auto flex max-w-screen-tablet items-center justify-between py-4'
  >
    <a href='/' class='flex items-center gap-2'>
      <span
        class='bg-background-foreground aspect-square h-full rounded-md p-1 text-background'
      >
        <UngsLocoIcon />
      </span>
      <div class='hidden sm:block'>
        <h2>UNGS Archive</h2>
        <span class='block text-xs'>Santiago Zarate </span>
      </div>
    </a>
    <section class='flex items-center gap-8'>
      <nav class='flex gap-4'>
        <a
          class='text-sm font-light uppercase opacity-50 transition-opacity hover:opacity-100'
          href='/materias'>materias</a
        >
        <a
          class='text-sm font-light uppercase opacity-50 transition-opacity hover:opacity-100'
          href='materias'>Parciales</a
        >
      </nav>
      <ThemeSwitcher />
    </section>
  </div>
</header>
