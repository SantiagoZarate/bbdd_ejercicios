---
import '../styles/index.css'
import Header from '../components/common/header/Header.astro'
import Footer from '../components/common/footer/Footer.astro'
import { ClientRouter } from 'astro:transitions'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <script>
      if (
        localStorage.getItem('ungs-archive-theme') === 'dark' ||
        (!('ungs-archive-theme' in localStorage) &&
          window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class='bg-background px-6 font-geist text-primary'>
    <Header />
    <section
      class='prose mx-auto grid min-h-dvh max-w-screen-tablet grid-rows-[1fr_auto] pt-28 lg:prose-xl'
    >
      <section class='flex flex-col gap-12'>
        <slot />
      </section>
      <Footer />
    </section>
  </body>
</html>
